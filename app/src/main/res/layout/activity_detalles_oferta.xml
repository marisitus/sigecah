<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/nombreOferta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="25sp"
                android:textColor="@color/azul_medianoche_claro"
                android:textStyle= "bold|italic"
                android:textAllCaps="true"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/logoAnimacion"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/tienda"
                android:layout_below="@+id/nombreOferta"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/descripcionOferta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logoAnimacion"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/fecha1Oferta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/descripcionOferta"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/fecha2Oferta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fecha1Oferta"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/precioOferta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fecha2Oferta"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/tiendaOferta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/precioOferta"
                android:layout_marginTop="15dp"/>

        </RelativeLayout>

</ScrollView>
