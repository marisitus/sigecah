<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/nombreAnimacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="25sp"
                android:textColor="@color/azul_medianoche_claro"
                android:textStyle= "bold|italic"
                android:textAllCaps="true"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/logoAnimacion"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@mipmap/ic_launcher"
                android:layout_below="@+id/nombreAnimacion"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/lugarAnimacion"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logoAnimacion" />

            <TextView
                android:id="@+id/tipoAnimacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lugarAnimacion"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/descripcionAnimacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/tipoAnimacion"/>

            <TextView
                android:id="@+id/inscripciontext"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:text="@string/seleccione_personas"
                android:layout_below="@+id/descripcionAnimacion"
                android:layout_alignLeft="@+id/descripcionAnimacion"
                android:layout_alignStart="@+id/descripcionAnimacion"
                android:gravity="center"
                android:layout_marginTop="10dp"/>

            <NumberPicker
                android:id="@+id/numberPicker"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_alignTop="@+id/inscripciontext"
                android:layout_toRightOf="@+id/inscripciontext"
                android:layout_toEndOf="@+id/inscripciontext"
                android:layout_marginLeft="12sp"
                tools:ignore="RtlHardcoded" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/inscripciontext"
                android:layout_marginTop="10dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@color/azul_medianoche_claro"
                android:textColor="#ffffffff" />

            <TextView
                android:id="@+id/plazas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button"
                android:layout_marginTop="15dp" />

        </RelativeLayout>

</ScrollView>
